<environment include="Development">
    <script src="~/lib/summernote/dist/summernote-bs4.min.js"></script>
    <script src="~/lib/summernote/dist/summernote-it-IT.js"></script>
    <link  rel="stylesheet" href="~/lib/summernote/dist/summernote-bs4.min.css">
</environment>
<environment exclude="Development">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/lang/summernote-it-IT.js"></script>
    <link  rel="stylesheet" href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css">
</environment>
<script>
    $('[data-summernote]').summernote({
    minHeight: 300,
    lang: 'it-IT',
    toolbar: [
        // [groupName, [list of button]]
        ['style', ['bold', 'italic']],
        ['insert', ['video']],
        ['para', ['ul', 'ol']],
        ['view', ['codeview']]
    ]
});
</script>